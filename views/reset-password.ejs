<div class="mx-auto absolute top-0 left-0 right-0 bottom-0 flex flex-col justify-center items-center gap-4">
	<h1 class="text-2xl md:text-4xl text-white font-bold mb-5">Reset Password</h1>
	<form action="/users/reset_password/<%= user._id %>/<%= token %>" method="post" class="flex flex-col justify-center items-center gap-4">
		<input class="w-72 md:w-96 p-2" type="password" name="password" id="password" placeholder="Password" required>
		<input class="w-72 md:w-96 p-2" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm password" required>
		<button class="w-60 px-4 py-2 text-2xl text-white bg-blue-700 rounded hover:bg-blue-800" type="submit">Reset Password</button>
	</form>
	<button class="w-60 px-4 py-2 text-2xl text-white bg-transparent border-2 rounded hover:bg-red-600 hover:border-red-600">
		<a href="/users/login">Cancel</a>
	</button>
</div>