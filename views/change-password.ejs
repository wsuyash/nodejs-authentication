<div class="mx-auto absolute top-0 left-0 right-0 bottom-0 flex flex-col justify-center items-center gap-4">
	<h1 class="text-2xl md:text-4xl text-white font-bold mb-10">Change Password</h1>
	<form action="/dashboard/change_password" method="post" class="flex flex-col justify-center items-center gap-4">
		<input class="w-72 md:w-96 p-2" type="password" name="currentPassword" id="currentPassword" placeholder="Current password" required>
		<br>
		<input class="w-72 md:w-96 p-2" type="password" name="newPassword" id="newPassword" placeholder="New password" required>
		<br>
		<input class="w-72 md:w-96 p-2" type="password" name="confirmNewPassword" id="confirmNewPassword" placeholder="Confirm new password" required>
		<br>
		<button class="w-72 p-2 text-2xl text-white bg-blue-700 rounded hover:bg-blue-800" type="submit">Change Password</button>
	</form>
	<button class="px-4 py-2 text-2xl text-white bg-transparent border-2 rounded hover:bg-red-600 hover:border-red-600">
		<a href="/dashboard">Cancel</a>
	</button>
</div>