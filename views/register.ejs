	<div class="h-[1px] w-[15rem] border-[1px] border-white"></div>
	</div>
	<form action="" method="post">
		<button class="flex justify-center items-center gap-4 w-[20rem] p-2 text-2xl text-white bg-blue-700 rounded hover:bg-blue-800" type="submit">
