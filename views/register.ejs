<div class="mx-auto absolute top-0 left-0 right-0 bottom-0 flex flex-col justify-center items-center md:gap-4 overflow-scroll md:overflow-hidden">
	<img src="/images/register.png" alt="Register logo." class="w-20 md:w-40 h-20 md:h-40 mt-20 mb-4 md:mt-0 md:mb-0">
	<form action="/users/create_user" method="post" class="flex flex-col justify-center items-center gap-4">
		<input class="w-72 md:w-96 p-2" type="text" name="name" id="name" placeholder="Name">
		<input class="w-72 md:w-96 p-2" type="text" name="email" id="email" placeholder="Email">
		<input class="w-72 md:w-96 p-2" type="password" name="password" id="password" placeholder="Password">
		<input class="w-72 md:w-96 p-2" type="password" name="confirmPassword" id="confirm-password" placeholder="Confirm password">
		<br>
		<div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
    <br/>
		<button class="w-72 md:w-96 p-2 text-base md:text-2xl text-white bg-blue-700 rounded hover:bg-blue-800" type="submit">Sign Up</button>
	</form>
	<div class="w-72 md:w-96 flex justify-between items-center gap-4">
	<div class="h-[1px] w-[15rem] border-[1px] border-white"></div>
	<p class="text-2xl text-white text-center">or</p>
	<div class="h-[1px] w-[15rem] border-[1px] border-white"></div>
	</div>
	<a href="/users/auth/google">
		<button class="flex justify-center items-center gap-4 w-72 md:w-96 p-2 text-base md:text-2xl text-white bg-blue-700 rounded hover:bg-blue-800" type="submit">
			<img src="/images/google-logo.png" alt="Google logo." class="w-6 md:w-8 h-6 md:h-8">
			<p>Sign Up with Google</p>
		</button>
	</a>
	<p class="text-base md:text-xl text-white font-bold mt-1 md:mt-10">Already have an account?</p>
	<a href="/users/login">
		<button class="flex justify-center items-center gap-4 w-72 md:w-96 p-2 text-base md:text-2xl text-white bg-blue-700 rounded hover:bg-blue-800 mb-2 md:mb-0" type="submit">
			Sign In
		</button>
	</a>
</div>